<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    
    <OutputType>Exe</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
	
    <WasmShellMonoRuntimeExecutionMode>Interpreter</WasmShellMonoRuntimeExecutionMode>
    <WasmShellGenerateCompressedFiles>false</WasmShellGenerateCompressedFiles>
    <WasmShellILLinkerEnabled>false</WasmShellILLinkerEnabled>
	<MonoRuntimeDebuggerEnabled>false</MonoRuntimeDebuggerEnabled>
	
    <!-- Grab latest MonoWasm drops from here: https://jenkins.mono-project.com/job/test-mono-mainline-wasm/label=ubuntu-1804-amd64/lastSuccessfulBuild/Azure/ -->
    <MonoWasmSDKUri>https://jenkins.mono-project.com/job/test-mono-mainline-wasm/label=ubuntu-1804-amd64/lastSuccessfulBuild/Azure/processDownloadRequest/2518/ubuntu-1804-amd64/sdks/wasm/mono-wasm-180915ffa6b.zip</MonoWasmSDKUri>
    <MonoWasmAOTSDKUri>https://jenkins.mono-project.com/job/test-mono-mainline-wasm/label=ubuntu-1804-amd64/lastSuccessfulBuild/Azure/processDownloadRequest/2518/ubuntu-1804-amd64/wasm-release-Linux-180915ffa6bea6712109d40ec6bd3666415f511b.zip</MonoWasmAOTSDKUri>
	
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SixLabors.ImageSharp" Version="1.0.0-beta0006" />
    <PackageReference Include="WaveEngine.Common" Version="2.5.0.39" />
    <PackageReference Include="Uno.Wasm.Bootstrap" Version="1.0.0-dev.242" />
    <DotNetCliToolReference Include="Uno.Wasm.Bootstrap.Cli" Version="1.0.0-dev.242" />
  </ItemGroup>
  
  <ItemGroup>
    <Reference Include="WebAssembly.Bindings">
      <HintPath>..\WebGLDotNET\WebAssembly.Bindings.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="WebAssembly.Net.Http">
      <HintPath>..\WebGLDotNET\WebAssembly.Net.Http.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>
  
  <ItemGroup>
    <LinkerDescriptor Remove="LinkerConfig.xml" />
    <None Remove="Assets\spongebob.bmp" />
    <None Remove="Assets\spongebob.jpg" />
    <None Remove="Assets\spongebob.png" />
    <None Remove="WasmCSS\styles.css" />
    <EmbeddedResource Include="WasmCSS\styles.css" />
    <Content Include="Assets\spongebob.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\spongebob.bmp">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\spongebob.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\WebGLDotNET\WebGLDotNET.csproj" />
  </ItemGroup>

</Project>
