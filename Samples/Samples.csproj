<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    
    <OutputType>Exe</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
	
    <MonoRuntimeDebuggerEnabled>true</MonoRuntimeDebuggerEnabled>

    <WasmHead>true</WasmHead>
    <DefineConstants>$(DefineConstants);__WASM__</DefineConstants>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
   
    <WasmShellGenerateCompressedFiles>false</WasmShellGenerateCompressedFiles>
    <WasmShellILLinkerEnabled>false</WasmShellILLinkerEnabled>
    <WasmShellMonoRuntimeExecutionMode>Interpreter</WasmShellMonoRuntimeExecutionMode>
	
    <!--
      Grab latest MonoWasm drops from here:
      https://jenkins.mono-project.com/job/test-mono-mainline-wasm/label=ubuntu-1804-amd64/lastSuccessfulBuild/Azure/
    -->
    <!--<MonoWasmSDKUri>https://jenkins.mono-project.com/job/test-mono-mainline-wasm/2555/label=ubuntu-1804-amd64/Azure/processDownloadRequest/2555/ubuntu-1804-amd64/sdks/wasm/mono-wasm-7116ecaf4ee.zip</MonoWasmSDKUri>
    <MonoWasmAOTSDKUri>https://jenkins.mono-project.com/job/test-mono-mainline-wasm/2555/label=ubuntu-1804-amd64/Azure/processDownloadRequest/2555/ubuntu-1804-amd64/wasm-release-Linux-7116ecaf4eeceed143023352d597e4d09f1dfc95.zip</MonoWasmAOTSDKUri>-->
	
  </PropertyGroup>

  <ItemGroup>
    <MonoRuntimeMixedModeExcludedAssembly Include="SkiaSharp.Wasm" />
  </ItemGroup>
  
  <ItemGroup>
    <!--<PackageReference Include="SixLabors.ImageSharp" Version="1.0.0-beta0006" />-->
    <PackageReference Include="Uno.Wasm.Bootstrap" Version="1.0.0-dev.263" />
    <PackageReference Include="WaveEngine.Common" Version="2.5.0.39">
      <NoWarn>NU1701</NoWarn>
    </PackageReference>
    <DotNetCliToolReference Include="Uno.Wasm.Bootstrap.Cli" Version="1.0.0-dev.242" />
  </ItemGroup>
  
  <ItemGroup>

    <Reference Include="SkiaSharp.Wasm">
      <HintPath>..\libs\Uno.SkiaSharp\SkiaSharp.Wasm.dll</HintPath>
    </Reference>

    <Reference Include="WebAssembly.Bindings">
      <HintPath>..\libs\WebAssembly.Bindings.dll</HintPath>
      <Private>False</Private>
    </Reference>
    
    <EmbeddedResource Include="WasmScripts\*.js" />
    <EmbeddedResource Include="WasmCSS\*.css" />
    
    <Content Include="canvaskit.wasm">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>

    <None Remove="Assets\PlainConcepts.bmp" />

    <Content Include="Assets\PlainConcepts.bmp">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    
    <None Remove="Assets\PlainConcepts.jpg" />
    <Content Include="Assets\PlainConcepts.jpg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    
    <None Remove="Assets\PlainConcepts.png" />
    <Content Include="Assets\PlainConcepts.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>

  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\WebGLDotNET\WebGLDotNET.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>
  
</Project>
